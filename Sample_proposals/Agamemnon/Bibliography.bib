issn = {0270-6474},
journal = {The Journal of neuroscience: the official journal of the Society for Neuroscience},
keywords = {Animals,Arm,Arm: physiology,Biomechanics,Electromyography,Macaca mulatta,Male,Motor Cortex,Motor Cortex: physiology,Movement,Neurons,Neurons: physiology},
month = nov,
number = {11},
pages = {1527--37},
